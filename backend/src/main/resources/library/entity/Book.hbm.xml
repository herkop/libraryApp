<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="library.entity">
    <class name="Book" table="book">
        <id name="id" type="int" column="id">
        <generator class="identity"/>
        </id>
        <property name="title" column="title" type="string"/>
        <property name="year" column="year" type="int"/>
        <property name="isbn" column="isbn" type="long"/>
        <property name="language" column="language" type="string"/>
        <property name="author" column="author" type="string"/>
        <property name="available" column="available" type="boolean"/>
    </class>
</hibernate-mapping>